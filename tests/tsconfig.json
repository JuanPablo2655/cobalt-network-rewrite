{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"types": ["vitest/globals"],
		"paths": {
			"#utils/*": ["../src/lib/utils/*"],
			"#lib/*": ["../src/lib/*"],
			"#root/*": ["../src/*"],
			"#mocks/*": ["./mocks/*"]
		}
	},
	"include": [".", "../src/**/*"],
	"exclude": ["../dist/**/*"],
	"references": [{ "path": "../src" }]
}
